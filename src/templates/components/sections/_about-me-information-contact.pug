//-
    About Me ~ Information & Contact

.about-me-section
    header.about-me-section-header
        span(aria-hidden="true" class="icon icon-15 icon-info about-me-section-icon")
        span.filling-line
        h3.heading.heading-4.text-center
            | #{data.mainWrapper.aboutMeWrapper.informationContact.h3[0]}
            br
            | #{data.mainWrapper.aboutMeWrapper.informationContact.h3[1]}
        span.filling-line.ending
    .about-me-section-body
        ul.about-me-list
            li.info-block
                .info-title.i-block.text-bolded #{data.mainWrapper.aboutMeWrapper.informationContact.address.title}:
                .info-description.i-block
                    | #{data.mainWrapper.aboutMeWrapper.informationContact.address.description}
                    span(aria-hidden="true" class="icon icon-location color-accent-light info-icon")
            li.info-block
                .info-title.i-block.text-bolded #{data.mainWrapper.aboutMeWrapper.informationContact.birthDate.title}:
                info-description.i-block
                    | #{data.mainWrapper.aboutMeWrapper.informationContact.birthDate.description}
                    span(aria-hidden="true" class="icon icon-birthday color-accent-light info-icon")
            li.info-block
                .info-title.i-block.text-bolded #{data.mainWrapper.aboutMeWrapper.informationContact.email.title}:
                .info-description.i-block
                    a(href="mailto:" + data.mainWrapper.aboutMeWrapper.informationContact.email.link.href class="info-link")
                        | #{data.mainWrapper.aboutMeWrapper.informationContact.email.link.displayedText}
                        span(aria-hidden="true" class="icon icon-mail-alt color-accent-light info-icon")
            li.info-block
                .info-title.i-block.text-bolded #{data.mainWrapper.aboutMeWrapper.informationContact.website.title}:
                .info-description.i-block
                    a(href=data.mainWrapper.aboutMeWrapper.informationContact.website.link.href class="info-link")
                        | #{data.mainWrapper.aboutMeWrapper.informationContact.website.link.displayedText}
                        span(aria-hidden="true" class="icon icon-globe color-accent-light info-icon")
            li.info-block
                .info-title.i-block.text-bolded #{data.mainWrapper.aboutMeWrapper.informationContact.phone.title}:
                .info-description.i-block
                    a(href="tel:" + data.mainWrapper.aboutMeWrapper.informationContact.phone.link.href class="info-link")
                        | #{data.mainWrapper.aboutMeWrapper.informationContact.phone.link.displayedText}
                        span(aria-hidden="true" class="icon icon-mobile color-accent-light info-icon")