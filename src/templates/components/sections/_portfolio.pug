//-
    Portfolio Wrapper

section(id="portfolio" class="section portfolio-wrapper")
    .container
        .row.no-gutters.flex-column.align-items-center
            .section-decoration
                span.icon.icon-2.icon-code.section-decoration-icon
            header.section-header
                h2.heading.heading-2.heading-unique-1.text-center= data.mainWrapper.portfolioWrapper.header.h2
                .heading-separator
                    .heading-separator__line
                    .heading-separator__square.primary
                    .heading-separator__line
                p.section-header-description= data.mainWrapper.portfolioWrapper.header.p
        .row
            .col-12
                ul.row.align-content-center.justify-content-center.portfolio-filters__list.portfolio-filters-js
                    each value, property in data.mainWrapper.portfolioWrapper.projects.categories
                        if property === "all"
                            li
                                button(data-filter-type=property class="btn portfolio-filters__button active")
                                    span= value
                        else
                            li
                                button(data-filter-type=property class="btn portfolio-filters__button")
                                    span= value
                .row.portfolio-items.portfolio-items-js
                    each obj, property in data.mainWrapper.portfolioWrapper.projects
                        if property !== "categories"
                            each project in obj
                                div(data-type=property class="portfolio-item col-xl-4 col-lg-4 col-md-6 col-sm-6")
                                    figure(tabindex="0" class="portfolio-item__figure")
                                        img(src=project.imgSrc alt=project.imgAlt class="portfolio-item__img")
                                        figcaption.portfolio-item__figcaption.text-center
                                            h3.heading.heading-5.portfolio-item-title= project.title
                                            .heading-separator
                                                .heading-separator__line.heading-separator__line-reduced-2.heading-separator__line-bolded-3.primary
                                            p.paragraph.ending.portfolio-item-description!= project.description
                                            .portfolio-item-buttons
                                                a(href=project.buttons[0].link class="btn to-top color-white")= project.buttons[0].value
                                                a(href=project.buttons[1].link class="btn to-top btn-primary")= project.buttons[1].value