//-
    Services Wrapper

section(id="services" class="section services-wrapper")
    .container
        .row.no-gutters.flex-column.align-items-center
            .section-decoration
                span.icon.icon-2.icon-wrench.section-decoration-icon
            header.section-header
                h2.heading.heading-2.heading-unique-1.text-center= data.mainWrapper.servicesWrapper.header.h2
                .heading-separator
                    .heading-separator__line
                    .heading-separator__square.primary
                    .heading-separator__line
                p.section-header-description= data.mainWrapper.servicesWrapper.header.p
        .row
            .col-12
                .owl-carousel.owl-theme.owl-carousel-services.owl-carousel-services-js
                    each obj in data.mainWrapper.servicesWrapper.services
                        .services-1-item.text-center
                            span(aria-hidden="true" class="icon-img icon-5 icon-services-" + obj.iconName + " services-1-item-icon")
                            h3.heading.heading-4.services-1-item-title= obj.title
                            .heading-separator
                                .heading-separator__line.heading-separator__line-bolded-3.services-1-item-heading-separator__line
                            if obj.description.length >= 165
                                - var description = obj.description.substring(0, 165)
                                - var dots = description[description.length - 1] === "." ? ".." : "..."
                                p.paragraph.text-justify!= description + dots
                            else
                                p.paragraph!= obj.description
                            button(type="button" class="btn to-top btn-primary-text services-1-item-button")= obj.button