//-
    Main Wrapper

main.main-wrapper
    section(id="home" class="home-wrapper")
        .container
            .row.no-gutters.flex-column.align-items-center.justify-content-center.home-row
                header.home-header
                    h2.primary-heading= data.mainWrapper.homeWrapper.h2
                    .heading-separator
                        .heading-separator__line
                        .heading-separator__square
                        .heading-separator__line
                    h3.tertiary-heading= data.mainWrapper.homeWrapper.h3
                    .home-header-buttons
                        a(href="#aboutMe" class="btn btn-accent to-top")= data.mainWrapper.homeWrapper.buttons.aboutMe
                        a(href="#services" class="btn btn-primary-dark to-top")= data.mainWrapper.homeWrapper.buttons.services
                a(href="#aboutMe" aria-label=data.mainWrapper.homeWrapper.buttons.arrowBtnAriaLabel class="btn btn-arrow-down")
    section(id="aboutMe" class="about-me-wrapper")
        .container
            .row
                header.section-header
                    h2.secondary-heading= data.mainWrapper.aboutMeWrapper.header.h2
                    .heading-separator
                        .heading-separator__line
                        .heading-separator__square
                        .heading-separator__line
                    p.section-header-description= data.mainWrapper.aboutMeWrapper.header.p
    section(id="services" class="services-wrapper")
        .container
            .row
                header.section-header
                    h2.secondary-heading= data.mainWrapper.servicesWrapper.header.h2
                    .heading-separator
                        .heading-separator__line
                        .heading-separator__square
                        .heading-separator__line
                    p.section-header-description= data.mainWrapper.servicesWrapper.header.p
    section(id="portfolio" class="portfolio-wrapper")
        .container
            .row
                header.section-header
                    h2.secondary-heading= data.mainWrapper.portfolioWrapper.header.h2
                    .heading-separator
                        .heading-separator__line
                        .heading-separator__square
                        .heading-separator__line
                    p.section-header-description= data.mainWrapper.portfolioWrapper.header.p
    section(id="contact" class="contact-wrapper")
        .container
            .row
                header.section-header
                    h2.secondary-heading= data.mainWrapper.contactWrapper.header.h2
                    .heading-separator
                        .heading-separator__line
                        .heading-separator__square
                        .heading-separator__line
                    p.section-header-description= data.mainWrapper.contactWrapper.header.p